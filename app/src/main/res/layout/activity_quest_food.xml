<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.form.question.QuestFoodActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="0dp"
                android:background="?attr/selectableItemBackground"
                android:padding="10dp"
                android:src="@drawable/ic_back"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/jost_medium"
                android:gravity="center"
                android:paddingEnd="48dp"
                android:text="Asupan Makanan dan Kalori"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_back"
                app:layout_constraintTop_toTopOf="@+id/btn_back" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:progress="100"
                android:progressTint="@color/purple_200"
                app:layout_constraintTop_toBottomOf="@+id/btn_back" />

            <TextView
                android:id="@+id/txt_quest_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/jost_medium"
                android:text="Berapa kali Anda makan dalam sehari?"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/progressBar" />

            <RadioGroup
                android:id="@+id/rg_quest_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_quest_1">

                <RadioButton
                    android:id="@+id/rb_quest_1_answer_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_medium"
                    android:text="1-2 kali"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb_quest_1_answer_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_medium"
                    android:text="3 kali"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb_quest_1_answer_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_medium"
                    android:text="Lebih dari 3 kali"
                    android:textSize="16sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/txt_quest_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/jost_medium"
                android:text="Apa jenis makanan yang sering Anda konsumsi?"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/rg_quest_1" />

            <RadioGroup
                android:id="@+id/rg_quest_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_quest_2">

                <RadioButton
                    android:id="@+id/rb_quest_2_answer_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_medium"
                    android:text="Tinggi Karbohidrat"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb_quest_2_answer_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_medium"
                    android:text="Tinggi Protein"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb_quest_2_answer_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_medium"
                    android:text="Rendah Lemak"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb_quest_2_answer_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_medium"
                    android:text="Seimbang"
                    android:textSize="16sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/txt_quest_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/jost_medium"
                android:text="Apakah Anda sering mengonsumsi makanan cepat saji atau olahan?"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/rg_quest_2" />

            <RadioGroup
                android:id="@+id/rg_quest_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_quest_3">

                <RadioButton
                    android:id="@+id/rb_quest_3_answer_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_medium"
                    android:text="Ya"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb_quest_3_answer_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_medium"
                    android:text="Tidak"
                    android:textSize="16sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/txt_quest_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/jost_medium"
                android:text="Berapa banyak camilan yang Anda konsumsi dalam sehari?"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/rg_quest_3" />

            <RadioGroup
                android:id="@+id/rg_quest_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_quest_4">

                <RadioButton
                    android:id="@+id/rb_quest_4_answer_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_medium"
                    android:text="Tidak Ada"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb_quest_4_answer_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_medium"
                    android:text="1-2 cemilan"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb_quest_4_answer_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_medium"
                    android:text="Lebih dari 2 cemilan"
                    android:textSize="16sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/btn_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_btn_purple"
                android:fontFamily="@font/jost_medium"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingHorizontal="32dp"
                android:paddingVertical="10dp"
                android:text="Selesai"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rg_quest_4" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>